<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ListLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Title"
                    android:textColor="#bf4f3f" />

                <TextView
                    android:id="@+id/TvNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="No" />

                <TextView
                    android:id="@+id/TvYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Year" />

                <TextView
                    android:id="@+id/TvYearNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Year No" />

                <TextView
                    android:id="@+id/TvUploadDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Upload Date" />

                <TextView
                    android:id="@+id/TvRangeDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Range Date" />

                <TextView
                    android:id="@+id/TvExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Explanation" />

                <TextView
                    android:id="@+id/TvContentCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Content Count" />

                <TextView
                    android:id="@+id/TvPodcastLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:padding="10dp"
                    android:text="Podcast Link" />

                <TextView
                    android:id="@+id/TvVideoLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:padding="10dp"
                    android:text="Video Link" />

                <TextView
                    android:id="@+id/TvSiteLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:padding="10dp"
                    android:text="Site Link" />

                <TextView
                    android:id="@+id/TvSpace"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="#50BF4F3F" />

                <TextView
                    android:id="@+id/TvContentListTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Konu Başlıkları"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/TvContentList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="ContentList" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/MenuLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#a0bf4f3f"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/BtnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_effect"
                android:onClick="BtnBackClick"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <ImageButton
                android:id="@+id/BtnDownload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_effect"
                android:onClick="BtnDownloadClick"
                app:srcCompat="@android:drawable/stat_sys_download" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>